---
layout: default
---
{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>
  <article>
    {% if page.collection and page.collection.size > 0 %}
      {% assign collection = site[page.collection] | sort: "role_level" | reverse | where_exp: "item", "item.ex_member != true" %}
      {% if collection.size > 0 %}
        {% include profiles/profiles_list.liquid collection=collection %}
      {% endif %}
    {% endif %}
  </article>
  <hr>
  <hr>
  <header class="post-header">
    <h1 class="post-title">{{ page.ex_members_title }}</h1>
    <p class="post-description">{{ page.ex_members_description }}</p>
  </header>
  <article>
    {% if page.collection and page.collection.size > 0 %}
      {% assign collection = site[page.collection] | sort: "role_level" | reverse | where: "ex_member", true %}
      {% if collection.size > 0 %}
        {% include profiles/profiles_list.liquid collection=collection %}
      {% endif %}
    {% endif %}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>